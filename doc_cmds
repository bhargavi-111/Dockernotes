docker images (listof iamges)
docker run -d --name  cont--name -p hostport:container_port image(create container)
docker ps /docker ps -a(running images)
docker pull image-name (download image)
docker start cont-name
docker start $(docker ps -a)  
docker stop cont-name
docker stop cont-1 cont-2 cont-3
docker stop $(docker ps)
docker rm $(docker ps -a)(remove all stopped containers)
docker rm cont-name(remove stopped container)
docker rm-f cont-name(remove running container)
docker rmi image-name(remove an iamge)
docker rmi $(docker images) (remove unused image)
docker inspect cont-name(full container info)
docker logs cont-name(container log)
docker exec -it cont-name bash(enter into container)
docker inspect image image-name(  full image info)
  
  
            
  
  
  
